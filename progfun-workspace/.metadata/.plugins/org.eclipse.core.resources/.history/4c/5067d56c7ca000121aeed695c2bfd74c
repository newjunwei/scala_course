      for (i <- 0 to coins.length - 1 by 1) {
        var dis = money - coins(i);
        if (dis > 0) dcount = check(dis, dcount);
        else if (dis == 0) dcount += 1
        else dis = money
      }
      return dcount;
    }

    return check(money, 0);
    * 
    * 
    */
    
    def change(sum:Int, coins:List[Int], res:String):Int = {
//    	var car i:Int;
		if (sum == 0) { println(res)}
		else if (sum>0) {
			for (i <- 0 to coins.length-1) {
				change(sum-coins(i),coins,res+'|'+coins(i));
			}
		}
		return 0;
    }
    
    return change(money, coins, "");
  } 
		
	
  
  
}
