package week02

object TailRecursive {

  def main(args: Array[String]): Unit = {
    print(sum (x => x*x,2,6))
    
  }
  
  def sum(f: Int => Int, a: Int, b: Int): Int ={
    def loop(a: Int, acc: Int): Int = {
      if (a > b) acc
      else loop(a+1, f(a) + acc)
    }
    loop(a, 0)
  }
  
  

}