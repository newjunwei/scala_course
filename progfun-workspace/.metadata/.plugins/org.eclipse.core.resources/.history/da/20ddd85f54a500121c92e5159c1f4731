package common

object SheetCommon {
  val per = 100
  val weeks = 7
  val arr = Array(6, 9.67, 9, 9, 9, 9, 9, 9)
  
  def total(weekTotal: Array[Double]): Double = {
			def sum(index: Int): Double = {
				if (index > weeks - 1) 0
				else weekTotal(index) * 100 / 7 + sum(index + 1)
			}
			sum(0)
  }
  
  total({6.0, 9.67})
}